		<FaculdadeDeEconomia type="binary" thresholdvalue="1000"/>
		<FaculdadeDeEducacaoFisicaEDesportos type="binary" thresholdvalue="1000"/>
		<FaculdadeDeEngenharia type="binary" thresholdvalue="1000"/>
		<FaculdadeDeDireito type="binary" thresholdvalue="1000"/>
		<FaculdadeDeLetras type="binary" thresholdvalue="1000"/>
		<InstitutoDeArtesEDesign type="binary" thresholdvalue="1000"/>
		<InstitutoDeCienciasBiologicas type="binary" thresholdvalue="1000"/>
		<InstitutoDeCienciasDaSaude type="binary" thresholdvalue="1000"/>
